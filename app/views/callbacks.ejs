<h2>Callback Logs</h2>

<div class="filters">
  <form method="GET" action="/callbacks" class="filter-form">
    <div class="form-group">
      <label for="route">Filter by Route:</label>
      <select name="route" id="route">
        <option value="">All Routes</option>
        <% routes.forEach(route => { %>
          <option value="<%= route.path %>" <%= filters.route === route.path ? 'selected' : '' %>>
            <%= route.name %> (<%= route.path %>)
          </option>
        <% }) %>
      </select>
    </div>

    <% if (availableDates.length > 0) { %>
      <div class="form-group">
        <label for="date">Filter by Date:</label>
        <select name="date" id="date">
          <option value="">Today</option>
          <% availableDates.forEach(date => { %>
            <option value="<%= date %>" <%= filters.date === date ? 'selected' : '' %>>
              <%= date %>
            </option>
          <% }) %>
        </select>
      </div>
    <% } %>

    <button type="submit" class="btn">Apply Filters</button>
    <a href="/callbacks" class="btn btn-secondary">Clear</a>
  </form>
</div>

<div class="section">
  <% if (callbacks.length === 0) { %>
    <p class="empty-state">No callbacks found matching your filters.</p>
  <% } else { %>
    <p class="info-text">Showing <%= callbacks.length %> of <%= pagination.total %> callbacks</p>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Route</th>
            <th>Method</th>
            <th>IP</th>
            <th>Has Body</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% callbacks.forEach(callback => { %>
            <tr>
              <td><%= moment(callback.timestamp).tz(timezone).format('YYYY-MM-DD HH:mm:ss') %></td>
              <td><code><%= callback.route %></code></td>
              <td><span class="badge badge-<%= callback.method.toLowerCase() %>"><%= callback.method %></span></td>
              <td><%= callback.ip %></td>
              <td>
                <%
                  const hasBody = callback.body && Object.keys(callback.body).length > 0;
                %>
                <%= hasBody ? 'Yes' : 'No' %>
              </td>
              <td>
                <a href="/callbacks/<%= callback.id %>" class="btn btn-sm">View</a>
                <button class="btn btn-sm btn-danger" onclick="deleteCallback('<%= callback.id %>')">Delete</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <% if (pagination.totalPages > 1) { %>
      <div class="pagination">
        <% if (pagination.hasPrev) { %>
          <a href="?route=<%= filters.route || '' %>&date=<%= filters.date || '' %>&page=<%= filters.page - 1 %>" class="btn">Previous</a>
        <% } %>

        <span class="page-info">Page <%= pagination.currentPage %> of <%= pagination.totalPages %></span>

        <% if (pagination.hasNext) { %>
          <a href="?route=<%= filters.route || '' %>&date=<%= filters.date || '' %>&page=<%= filters.page + 1 %>" class="btn">Next</a>
        <% } %>
      </div>
    <% } %>
  <% } %>
</div>

<script>
function deleteCallback(id) {
  if (!confirm('Are you sure you want to delete this callback?')) {
    return;
  }

  fetch(`/api/callbacks/${id}`, {
    method: 'DELETE'
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error deleting callback: ' + data.message);
    }
  })
  .catch(err => {
    alert('Error deleting callback');
    console.error(err);
  });
}
</script>
